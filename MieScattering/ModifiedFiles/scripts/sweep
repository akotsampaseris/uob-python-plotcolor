# Create new sweep
addsweep;

# Set up the sweep
setsweep("sweep", "name", "nanoparticle_radius_sweep");
setsweep("nanoparticle_radius_sweep", "type", "Ranges");
setsweep("nanoparticle_radius_sweep", "number of points", 20); 

# Define the radius parameter
param = struct;
param.Name = "r_p";
param.Parameter = "::model::r_p";
param.Type = "Length";
param.Start = 4.0;
param.Stop =  6.0;
param.Units = "nanometers";

# Add radius to the sweep
addsweepparameter("nanoparticle_radius_sweep", param);

